; This file is for unifying the coding style for different editors and IDEs.
; More information at https://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Spaces in coffee
[**.coffee]
indent_style = space
indent_size = 2

[**.js]
indent_style = space
indent_size = 2

# Tabs in less
[**.less]
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.php]
indent_style = tab
indent_size = 4

[**.py]
indent_style = tab
indent_size = 4

[**.html]
indent_style = tab
indent_size = 2

[*.md]
indent_style = space
max_line_length = 80

[*.bat]
end_of_line = crlf

[*.yml]
indent_size = 2

[*.twig]
insert_final_newline = false

[*.neon]
indent_style = tab

[Makefile]
indent_style = tab
